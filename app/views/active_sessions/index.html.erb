<h2>Active Sessions</h2>
<%= button_to('Sign out of all other sessions', destroy_all_active_sessions_path, method: :delete) %>
<table>
  <thead>
    <tr>
      <th>User Agent</th>
      <th>IP Address</th>
      <th>Sign In At</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @active_sessions.each do |active_session| %>
      <tr>
        <td><%= active_session.user_agent %></td>
        <td><%= active_session.ip_address %></td>
        <td><%= active_session.created_at.strftime('%d-%m-%Y %H:%m:%S %Z') %></td>
        <td><%= link_to('Delete', active_session_path(active_session), data: { turbo_method: :delete }) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
