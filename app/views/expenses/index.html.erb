<%= link_to('New expense', new_expense_path) %>
<div class="expenses">
  <% @expenses.each do |expense| %>
    <div class="expense">
      <div><strong>Description: </strong> <%= expense.description %>
      <div><strong>Amount: </strong> <%= expense.amount %>
      <div><%= link_to('Show', expense_path(expense)) %></div>
    </div>
  <% end %>
</div>
